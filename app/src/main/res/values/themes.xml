<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ReDeal" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary20</item>
        <item name ="android:windowBackground">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>

    <style name="Theme.ReDeal" parent="Base.Theme.ReDeal"/>
    <style name="Theme.ReDeal.ToolbarTheme" parent="ThemeOverlay.Material3.Light">
        <item name="android:fontFamily">@font/nanumsquareneo_extrabold</item>
        <item name="android:textColorPrimary">@color/primary20</item>
        <item name="android:backgroundTint">@color/background</item>
    </style>

    <style name="Theme.ReDeal.ClientSearchBarTheme" parent="Theme.ReDeal">
        <item name="colorPrimary">@color/background</item>
        <item name="strokeColor">@color/primary20</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:radius">1dp</item>
        <item name="hintTextColor">@color/text30</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.ReDeal.MapSearchBarTheme" parent="Theme.ReDeal">
        <item name="colorPrimary">@color/background</item>
        <item name="hintTextColor">@color/text30</item>
        <item name="android:radius">4dp</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.ReDeal.ClientSearchViewTheme" parent="Theme.ReDeal">
        <item name="colorPrimary">@color/background</item>
        <item name="hintTextColor">@color/text30</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>