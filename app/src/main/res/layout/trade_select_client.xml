<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <EditText
        android:id="@+id/searchClientEditText"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="12dp"
        android:background="@drawable/date_selection_background"
        android:ems="10"
        android:hint="@string/trade_select_client_message"
        android:inputType="text"
        android:padding="4dp"
        android:autofillHints="@string/trade_select_client_message" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchClientResultRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="12dp" />
</LinearLayout>