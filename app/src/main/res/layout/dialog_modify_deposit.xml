<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/dividerModifyDeposit"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/primary20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textModifyDeposit" />

    <TextView
        android:id="@+id/textModifyDeposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanumsquareneo_extrabold"
        android:text="입금 수정"
        android:textColor="@color/primary20"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgBtnDeleteDeposit"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/delete_24px_primary20" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutModifyDeposit"
        android:layout_width="312dp"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextModifyDeposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:hint="금액"
            android:inputType="number"
            android:textColor="@color/text30" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewWonModifyDeposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/nanumsquareneo_regular"
        android:text="원"
        android:textColor="@color/text30"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/textInputLayoutModifyDeposit"
        app:layout_constraintEnd_toEndOf="@id/textInputLayoutModifyDeposit"
        app:layout_constraintTop_toTopOf="@id/textInputLayoutModifyDeposit" />

    <Button
        android:id="@+id/buttonModifyDeposit"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/primary20"
        android:fontFamily="@font/nanumsquareneo_bold"
        android:text="입금 수정"
        android:textSize="20sp"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutModifyDeposit" />

</androidx.constraintlayout.widget.ConstraintLayout>