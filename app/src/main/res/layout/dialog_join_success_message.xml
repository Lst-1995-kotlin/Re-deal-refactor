<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewJoinSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/nanumsquareneo_regular"
        android:text="회원 가입이 완료되었습니다"
        android:textColor="@color/text10"
        android:textSize="16dp" />

    <Button
        android:id="@+id/buttonJoinSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primary20"
        android:fontFamily="@font/nanumsquareneo_regular"
        android:text="확인" />

</LinearLayout>