            android:fontFamily="@font/nanumsquareneo_regular"
            android:gravity="center|right"
            android:hint="미수금"
            android:textColor="@color/primary20"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textTransaction11"
            android:layout_width="wrap_content"
