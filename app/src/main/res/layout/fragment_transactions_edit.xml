<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:transitionGroup="true"
    tools:context=".transaction.view.TransactionsEditFragment">

    <LinearLayout
        android:id="@+id/appBarLayoutTransactionEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:transitionGroup="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarTransactionEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/background"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/Theme.ReDeal.ToolbarTheme"
            app:navigationIcon="@drawable/arrow_back_ios_24px"
            app:title="편집"
            app:titleTextAppearance="@style/account_detail_toolbar_title_text_appearance"
            app:titleTextColor="@color/primary20" />

        <TextView
            android:id="@+id/toolbarTransactionEditTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nanumsquareneo_extrabold"
            android:gravity="center|right"
            android:textColor="@color/primary20"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:id="@+id/transactionEditDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayoutTransactionEdit" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactionEditSelectRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayoutTransactionEdit" />
</androidx.constraintlayout.widget.ConstraintLayout>