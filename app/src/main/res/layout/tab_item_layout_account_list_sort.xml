<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="28dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="4dp">

    <TextView
        android:id="@+id/textViewTabItemAccountListSorting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조회순"
        android:layout_gravity="center_vertical"
        android:textColor="@color/tab_item_text_color_account_list_sort"
        android:fontFamily="@font/nanumsquareneo_bold" />

    <ImageView
        android:id="@+id/imageViewTabItemAccountListSorting"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        app:srcCompat="@drawable/arrow_drop_down_24px" />

</LinearLayout>