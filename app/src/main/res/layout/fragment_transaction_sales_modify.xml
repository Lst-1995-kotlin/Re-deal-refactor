<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:transitionGroup="true">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/modifySalesFragmentToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:transitionGroup="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/arrow_back_ios_24px"
        app:title="거래 내역 수정"
        app:titleTextAppearance="@style/account_detail_toolbar_title_text_appearance" />

    <View
        android:id="@+id/transactionModifySalesDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary20"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifySalesFragmentToolbar" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/transactionModifyNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:hint="품명"
        android:textColorHint="@color/text30"
        app:boxStrokeColor="@color/primary20"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transactionModifySalesDivider">

        -*/*/-<com.google.android.material.textfield.TextInputEditText
            android:id="@+id/transactionModifyItemNameEditText"
            style="@style/transaction_text_input_edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border_not_focus"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:inputType="text"
            android:textColor="@color/text10"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/transactionModifyItemCountLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:hint="수량"
        android:textColorHint="@color/text30"
        app:boxStrokeColor="@color/primary20"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transactionModifyNameLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/transactionModifyItemCountEditText"
            style="@style/transaction_text_input_edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border_not_focus"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:inputType="number"
            android:maxLength="14"
            android:textColor="@color/text10"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/transactionModifyItemPriceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:hint="단가"
        android:textColorHint="@color/text30"
        app:boxStrokeColor="@color/primary20"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transactionModifyItemCountLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/transactionModifyItemPriceEditText"
            style="@style/transaction_text_input_edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border_not_focus"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:inputType="number"
            android:maxLength="14"
            android:textColor="@color/text10"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/transactionModifyAmountReceivedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:hint="받은금액"
        android:textColorHint="@color/text30"
        app:boxStrokeColor="@color/primary20"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transactionModifyItemPriceLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/transactionModifyAmountReceivedEditText"
            style="@style/transaction_text_input_edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border_not_focus"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:inputType="number"
            android:maxLength="14"
            android:textColor="@color/text10"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/amountModifyMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text60"
        app:layout_constraintEnd_toEndOf="@+id/transactionModifyAmountReceivedLayout"
        app:layout_constraintTop_toBottomOf="@+id/transactionModifyAmountReceivedLayout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/transactionModifyClientSelectLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:hint="거래처 선택"
        android:textColorHint="@color/text30"
        app:boxStrokeColor="@color/primary20"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountModifyMessageTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/transactionModifyClientSelectEditText"
            style="@style/transaction_text_input_edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border_not_focus"
            android:drawableEnd="@drawable/search_24px_primary20"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:inputType="number"
            android:textColor="@color/text10"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/modifySalesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_round_primary20"
        android:fontFamily="@font/nanumsquareneo_bold"
        android:text="거래 수정"
        android:textColor="@color/primary99"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>