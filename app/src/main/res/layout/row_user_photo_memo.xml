<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rowUserPhotoMemoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="36dp"
    android:paddingEnd="36dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/userPhotoDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/nanumsquareneo_bold"
        android:textColor="@color/text10"
        android:textSize="12sp"
        tools:text="2023.09.23" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userPhotoMemoClientState"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/constraintLayoutRowItemAccountListAccountName"
            app:srcCompat="@drawable/circle_big_24px_primary20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userPhotoMemoClientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareneo_regular"
                android:textSize="16sp"
                tools:text="멋쟁이 사자처럼" />

            <TextView
                android:id="@+id/userPhotoMemoClientManagerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareneo_regular"
                android:textSize="16sp"
                tools:text="라이온" />
        </LinearLayout>

        <ImageView
            android:id="@+id/userPhotoMemoEnterClientDetailBtn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_round_primary20"
            android:scaleType="center"
            android:src="@drawable/card_account_detail_24px_primary99" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userPhotoImageListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:id="@+id/userPhotoMemoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/photo_memo_box"
        android:fontFamily="@font/nanumsquareneo_regular"
        android:padding="12dp"
        android:text="TextView"
        android:textSize="16sp" />
</LinearLayout>